	<FrameLayout
		android:id="@+id/progressBarHolder"
		android:animateLayoutChanges="true"
		android:visibility="gone"
		android:alpha="0.4"
		android:background="#000000"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<ProgressBar
			style="?android:attr/progressBarStyleLarge"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:indeterminate="true"
			android:layout_gravity="center" />
	</FrameLayout>

	<TextView android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/outputTextView"
		android:scrollbarStyle="insideInset"
		android:text="Ausgabe der Textnachrichten\n"
		android:layout_below="@+id/in"
		android:scrollIndicators="right"
		android:textColor="#ffffff"

		android:gravity="bottom"/>

	<Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/recVoice" android:text="Voice"
		android:layout_column="7"
		android:contextClickable="false"
		android:background="#FF7D92"
		android:layout_alignParentTop="true"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true"
		android:layout_above="@+id/txtInput"
		android:textColor="#000000"
		/>

	<Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CLRTXT"
            android:id="@+id/clrTxt"
            android:layout_column="2"
            android:allowUndo="true"
            android:background="#80F2A8"
            android:textColor="#000000"
			android:layout_alignParentTop="true"
			android:layout_centerHorizontal="true"
			android:layout_above="@+id/txtInput" />

</RelativeLayout>

